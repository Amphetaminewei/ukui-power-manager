QListWidget
{
    background:rgba(14,19,22,0.90);
    border:0px;
    padding:0px 0px 0px 0px;
    margin-bottom: 20px;

}
/**列表项*/
QListWidget::item
{
    padding-left:0px;
    border:0px;

}

QListWidget::item:hover
{
background:rgba(61,107,229,1);
border-radius:2px;
}


QScrollBar
{
    width:1px;
    background:rgba(14,19,22,0.90);
    margin:0px,0px,0px,0px;
    padding-top:0px;   /*上预留位置*/
    padding-bottom:0px;    /*下预留位置*/
}
